<form class="" action="/funko/<%=funko.id%>?_method=DELETE" method="POST">
  <input type="submit" value="DELETE">
</form>
<form class= "" action="/funko/<%=funko.id%>/edit">
  <input type="submit" name="" value="EDIT">
</form>

  </body>
</html>
